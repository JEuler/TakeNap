<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloverrepublic.takenap.MainActivity">

    <Button
        android:id="@+id/min15_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="on15MinClick"
        android:text="15 минут" />

    <Button
        android:id="@+id/min30_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="on30MinClick"
        android:text="30 минут" />

    <Button
        android:id="@+id/min45_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="on45MinClick"
        android:text="45 минут" />

    <Button
        android:id="@+id/min60_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="on60MinClick"
        android:text="1 час" />

    <Button
        android:id="@+id/minCustom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCustomClick"
        android:text="Своё время" />

    <Button
        android:id="@+id/stop_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onStopClick"
        android:text="Остановить" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRateClick"
        android:text="Оценить!" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onOtherAppsClick"
        android:text="Другие приложения" />
</LinearLayout>
